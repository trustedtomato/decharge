{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "preserveWatchOutput": true,
    "module": "ESNext",
    "target": "ES2017",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*"]
}