{
  "compilerOptions": {
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "lib": ["ESNext"],
    "rootDir": "src",
    "preserveWatchOutput": true,
    
    // Only change this to a higher target
    // (top level await is only supported from ES2017)
    "target": "ES2017",
    
    // Don't change these compiler options!
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "module": "ESNext",
    "outDir": "/dev/null",
    "moduleResolution": "node",
    "esModuleInterop": true,
  },
  "include": ["src/routes/**/*"]
}